<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ClientRegistrationActivity"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:id="@+id/edittext_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Enter user id here"
        android:layout_margin="15dp" />

    <Button
        android:id="@+id/button_client_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Client"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <ProgressBar
        android:id="@+id/progress_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textview_registration_status"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>


</LinearLayout>