<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/button_go_to_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Go to Local"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textview_connection_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_go_to_local"
        android:text="Status"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

<!--    <Button-->
<!--        android:id="@+id/button_wifi"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/textview_connection_status"-->
<!--        android:layout_alignParentStart="true"-->
<!--        android:layout_marginStart="50dp"-->
<!--        android:padding="10dp"-->
<!--        android:text="Change Wifi Status" />-->

    <Button
        android:id="@+id/button_discover"
        android:text="Discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_connection_status"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:padding="10dp" />

    <ListView
        android:id="@+id/listview_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/button_discover"
        android:padding="10dp"
        android:layout_margin="10dp"/>

</RelativeLayout>